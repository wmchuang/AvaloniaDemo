             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MiniCalendarDemo.App">

    <Application.Styles>
        <FluentTheme/>
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
    
                <MergeResourceInclude Source="avares://MiniCalendarDemo/ControlsStyle/Calendar.xaml" />
                <MergeResourceInclude Source="avares://MiniCalendarDemo/ControlsStyle/CalendarItem.xaml" />
                <MergeResourceInclude Source="avares://MiniCalendarDemo/ControlsStyle/CalendarDayButton.xaml" />
    
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>