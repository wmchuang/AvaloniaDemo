<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:PropertyDemo.UserControls"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PropertyDemo.UserControls.AttachView"
			 uc:AttachView.Value="10"
			 Name="uc">
	<StackPanel Orientation="Vertical">
		<TextBlock Text="{Binding #uc.(uc:AttachView.Value)}" Width="50" />
		<Slider  Width="150" Value="{Binding #uc.(uc:AttachView.Value)}"/>
	</StackPanel>
</UserControl>
